@model _96h.Models.Dossier
@{
    ViewData["Title"] = "Підприємство";
}

<br />
<br />
<div class="search-wrap col-12 ">
    <input type="text" id="search_text" maxlength="8" placeholder="ЄДРПОУ" />
    <input type="button" id="company_search_btn" value="Пошук" />
</div>
<br />
<br />
<br />
<div class="company-wrap col-12">
    <div class="col">
        @TempData["homeMess"]
    </div>
    @if (Model != null)
    {
        {
            ViewData["Title"] = Model.EDR.sName;
        }
        <div class="result-body el-shadow">
            <div class="row">
                <div class="col-9">
                    <h2>@Model.EDR.sName</h2>
                    <div class="company-actual-info">Інформація актуальна на: @Model.EDR.dateLoad</div>
                </div>
                <div class="col-3 d-flex justify-content-center align-items-center">
                    <div class="communication-bnt d-flex justify-content-end"><a asp-action="Communications" asp-route-edrpou=@Model.EDR.edrpou>Зв'язки</a></div>
                </div>
            </div>
            <hr />
            <div class="company-main-info">
                <div class="info-item row">
                    <div class="col-2 "> Повна назва:</div>
                    <div class="col-10">@Model.EDR.fName</div>
                </div>
                <div class="info-item row">
                    <div class="col-2"> Код ЭДРПОУ:</div>
                    <div class="col-10">@Model.EDR.edrpou</div>
                </div>
                <div class="info-item row">
                    <div class="col-2"> Адреса:</div>
                    <div class="col-10">@Model.EDR.address</div>
                </div>
                <div class="info-item row">
                    <div class="col-2"> Директор:</div>
                    <div class="col-10">@Model.EDR.director</div>
                </div>
                <div class="info-item row">
                    <div class="col-2"> Статус:</div>
                    @if (Model.EDR.status == "зареєстровано")
                    {
                        <div class="col-10 text-success">@Model.EDR.status</div>
                    }
                    else
                    {
                        <div class="col-10 text-dange">@Model.EDR.status</div>
                    }
                </div>
                <div class="info-item row">
                    <div class="col-2"> Діяльність:</div>
                    <div class="col-10">@Model.EDR.kved</div>
                </div>
                <hr />
                <div class="company-founders info-item row">
                    <div class="col-2">Засновники:</div>
                    <div class="col-10">
                        @foreach (var item in Model.FOUNDERS.FOUNDER)
                        {
                            <div class="founder founder-name">@item.name</div>
                            <div class="founder founder-summ">Внесок: @item.summ</div>
                        }
                    </div>
                </div>
                <hr />
                <div class="info-item row">
                    <div class="col-2">Платник ПДВ:</div>
                    <div class="col-10">
                        <div class="pdv-num">Номер свідоцтва: @Model.PDV.kod_pdv</div>
                        <div class="pdv-num">Дата реєстрації: @Model.PDV.dat_reestr</div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/site.js"></script>
