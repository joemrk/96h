@model _96h.Models.Communication

@{
    ViewData["Title"] = "Communications";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<div class="search-wrap col-12">
    <input type="text" id="search_text" maxlength="8" placeholder="ЄДРПОУ" />
    <input type="button" id="communications_search_btn" value="Пошук" />
</div>
<br />
<br />
<br />

<div class="communications-wrap col-12">
    <div class="col">
        @TempData["homeMess"]
    </div>
    @if (Model != null)
    {
        {
            ViewData["Title"] = @Model.COMPANY.name;
        }

        <div class="row">
            <div class="col-9">
                <h2>@Model.COMPANY.name</h2>
            </div>
            <div class="col-3 d-flex justify-content-center align-items-center">
                <div class="communication-bnt d-flex justify-content-end "><a  class="scheme-link" data-edrpou=@Model.COMPANY.edrpou>Схема</a><br /></div>
            </div>
        </div>
        <hr />
        <div class="communications row">
            <div class="director col">
                <h4>Директор:</h4>
                <div class="child el-shadow">
                    @Model.DIRECTOR.name
                    <hr />
                    @foreach (var child in Model.DIRECTOR.children)
                    {
                        <span class="child-link" data-edrpou=@child.edrpou>@child.name </span> <br />
                    }
                </div>

            </div>
            <div class="founders col">
                <h4>Засновники:</h4>
                @foreach (var founder in Model.FOUNDERS)
                {
                    <div class="child el-shadow">
                        @founder.name
                        <hr />
                        @foreach (var child in founder.children)
                        {
                            <span class="child-link" data-edrpou=@child.edrpou>@child.name </span><br />
                        }
                    </div>
                }
            </div>

        </div>
    }
</div>
<div id="cy"></div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/site.js"></script>
